-- Roblox GUI Script for Executor
-- Made for MM2 fake dupe script

-- Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "MM2DupeUI"
gui.ResetOnSpawn = false

-- Function to create a simple label
local function createLabel(text, parent, size, pos)
	local label = Instance.new("TextLabel")
	label.Size = size or UDim2.new(0.5, 0, 0.1, 0)
	label.Position = pos or UDim2.new(0.25, 0, 0.45, 0)
	label.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.TextScaled = true
	label.Font = Enum.Font.GothamBold
	label.Text = text
	label.Parent = parent
	return label
end

-- Function to create a simple button
local function createButton(text, parent, size, pos)
	local button = Instance.new("TextButton")
	button.Size = size or UDim2.new(0.4, 0, 0.08, 0)
	button.Position = pos or UDim2.new(0.3, 0, 0.85, 0)
	button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
	button.TextColor3 = Color3.fromRGB(255, 255, 255)
	button.TextScaled = true
	button.Font = Enum.Font.GothamBold
	button.Text = text
	button.Parent = parent
	return button
end

-- Step 1: Initial "Script Loading" screen
local loadingFrame = Instance.new("Frame", gui)
loadingFrame.Size = UDim2.new(1, 0, 1, 0)
loadingFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

local loadingLabel = createLabel("Script Loading...", loadingFrame)

-- Wait for 3 minutes (180 seconds)
task.delay(180, function()
	loadingFrame:Destroy()

	-- Step 2: Weapon Selection UI
	local selectionFrame = Instance.new("Frame", gui)
	selectionFrame.Size = UDim2.new(1, 0, 1, 0)
	selectionFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)

	local titleLabel = createLabel("Select a Knife or Gun", selectionFrame, UDim2.new(0.6, 0, 0.1, 0), UDim2.new(0.2, 0, 0.05, 0))

	local dropdown = Instance.new("TextBox")
	dropdown.Size = UDim2.new(0.6, 0, 0.08, 0)
	dropdown.Position = UDim2.new(0.2, 0, 0.4, 0)
	dropdown.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
	dropdown.TextScaled = true
	dropdown.Font = Enum.Font.Gotham
	dropdown.PlaceholderText = "Type weapon name here (e.g., Chroma Luger)"
	dropdown.Text = ""
	dropdown.Parent = selectionFrame

	local dupeButton = createButton("Dupe Item", selectionFrame)

	-- Step 3: On clicking "Dupe Item"
	dupeButton.MouseButton1Click:Connect(function()
		local weaponName = dropdown.Text
		if weaponName == "" then
			dropdown.PlaceholderText = "Please enter a weapon name"
			return
		end

		selectionFrame:Destroy()

		-- Step 4: Fake 10-minute loading screen
		local finalFrame = Instance.new("Frame", gui)
		finalFrame.Size = UDim2.new(1, 0, 1, 0)
		finalFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

		local finalLabel = createLabel("Script Loading... Estimated Time: 10 Minutes", finalFrame, UDim2.new(0.8, 0, 0.1, 0), UDim2.new(0.1, 0, 0.45, 0))
	end)
end)
